doctype html
html(lang="en")
  head
    title SurveyApp
    include includes/head
    script(type='text/javascript').
  body
    include includes/nav
    #content-area
        h1 Survey Metrics
        if survey.responses.length < 1
            p There are no responses yet.
        else
            table(class='table-theme' id='participants')
              thead
                tr
                    th Response
                    th Participant ID
              tbody
                each response in survey.responses
                    tr(id='response-'+response._id)
                        td= response
                        td= response.participant_id




