doctype html
html(lang="en")
  head
    title SurveyApp
    include includes/head
    script(type='text/javascript').
        //- $(function() {
        //- });
  body
    include includes/nav
    #content-area
        div(id='participant-name')= response.participant_id.first_name+' '+response.participant_id.last_name+"'s Response"

        each group in questions_answers

            div(class=group[0].type+' question-area' id='question-'+group[0]._id)
                h3 
                    &#8594;
                    = ' ' + group[0].query

                if (group[0].type === "Short Text")
                    div=group[1]

                if (group[0].type === "Long Text")
                    div= group[1]

                if (group[0].type === "Dropdown")
                    div= group[1]

                if (group[0].type === "Checkbox")
                    div= group[1]

                if (group[0].type === "Multiple Choice")
                    div= group[1]

                //- Special Question Types
                if (group[0].type === "Company")
                    span= response.participant_id.first_name
                    span  works at 
                    span(id='emphasis')= group[1].split(",")[0]
                    span  as a/an 
                    span(id='emphasis')= group[1].split(",")[1]
                    if ( group[1].split(",")[2] !== "")
                        span  and earns 
                        span(id='emphasis')= group[1].split(",")[2]

                if (group[0].type === "Patent")
                    div
                        span I am most proud of my patent on  
                        span(id='emphasis')= group[1].split(',')[0]
                        span  because 
                        span= group[1].split(',')[1]

                if (group[0].type === "Publication")
                    div
                        span I am most proud of my publication on  
                        span(id='emphasis')= group[1].split(',')[0]
                        span  because 
                        span= group[1].split(',')[1]

